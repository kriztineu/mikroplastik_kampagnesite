---
import BTN1 from "../general/BTN1.astro";
---

<section class="formBoxMedlem formBox">
    <div class="medlemHeading">
        <h2>Bliv medlem og tag del i kampen mod plastikforurening</h2>
        <p>Støt med et medlemskab for 350 kr. / årligt</p>
    </div>

    <div class="desktopFlex">
        <div class="informationForm">
            <form class="fornavn infoForm">
                <input type="text" id="fornavn" placeholder="Fornavn"></label>
            </form>
            <form class="efternavn infoForm">
                <input type="text" id="efternavn" placeholder="Efternavn"></label>
            </form>
            <form class="e-mail infoForm">
                <input type="text" id="e-mail" placeholder="E-mail"></label>
            </form>
            <form class="telefon infoForm">
                <input type="text" id="telefon" placeholder="Telefon"></label>
            </form>
        </div>

        <div class="betalingFlex">
            <h3 class="medlemH3">Betalingsform</h3>
            <div class="vaelgBetaling">
                <div class="betalingsMulighed">
                    <input type="radio" id="Mobilepay" name="betalingType" class="medlemBTN1 medlemRadio" checked>
                    <label for="Mobilepay" class="medlemBTN1"></label>
                    <p>Mobilepay</p>
                </div>
    
                <div class="betalingsMulighed">
                    <input type="radio" id="Betalingskort" name="betalingType" class="medlemBTN1 medlemRadio">
                    <label for="Betalingskort" class="medlemBTN1"></label>
                    <p>Betalingskort</p>
                </div>
            </div>
        </div>
    </div>

    <div class="blivMedlemCTA">
        <BTN1 data="Bliv medlem"/>
        <!-- <p>Og modtag b.la. vores månedlige nyhedsbrev</p> -->
    </div>

</section>

<style>


@keyframes slideUp {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-30px); 
  }
  100% {
    transform: translateY(0);
  }
}
.formBoxMedlem {
  animation: slideUp 0.5s ease-in-out; 
}

    .medlemHeading p {
        width: 20ch;
        padding-top: 10px;
        color: var(--light-grey);
    }
    .formBoxMedlem {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 328px;
        height: 640px;
        padding: 2rem;
        position: absolute;
        margin-top: 7rem;
    }

    .informationForm {
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding-bottom: 2rem;
    }

    label {
    font-family: Campton;
    }

    .medlemBTN1 {
        display: flex;
        border-radius: 50%;
        height: 16px;
        width: 16px;
        cursor: pointer;
        border: none;
        outline: none;
        background-color: transparent;
        border-style: solid;
    }

    .medlemRadio {
        display: none; /* Hide the actual radio buttons */
    } 

    .medlemRadio + label {
        color: var(--white);
        background-color: var(--dark-blue);
    }

    .medlemRadio:checked + label {
        color: var(--dark-blue);
        background-color: var(--white);
        }

    .infoForm input {
        border-color: 2px solid var(--light-grey);
        border-style: solid;
        background-color: transparent;
        color: var(--light-grey);
        width: 260px; 
        height: 52px; 
        padding: 10px; 
        border-radius: 8px;
    }

    .infoForm input:hover {
        color: var(--white);
    }

    .infoForm input:focus {
    border-color: var(--primary-red);
    outline: none; 
    }

    .vaelgBetaling {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding-left: 10px;
    }

    .betalingsMulighed{
        display: flex;
        align-items: center;
        flex-direction: row;
        gap: 12px;
    }
    .blivMedlemCTA {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .blivMedlemCTA p {
        font-size: 10px;
        font-style: italic;
        font-weight: 400;
    }

    .betalingFlex {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

    @media screen and (min-width: 800px) {
        .formBoxMedlem {
            width: 973px;
            height: 700px;
            gap: 2rem;
            margin-top: 10rem;
            padding: 4rem;
        }
        
        .formBoxMedlem h2 {
            width: 21.5ch;
        }

        .infoForm input {
            width: 466px;
            height: 57px;   
            padding: 10px; 
            border-radius: 8px;
        }

        .medlemHeading p {
            width: 50ch;
        }

        .desktopFlex {
            display: flex;
        }

        .betalingFlex {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding-left: 5rem;
        }

        .infoForm input {
            font-size: larger;
            padding-left: 20px; 
        }
    }
</style>