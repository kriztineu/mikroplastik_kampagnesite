---
import BTN1 from "./BTN1.astro";
import BTN2 from "./BTN2.astro";
---

<header>
    <div class="menu-container">
        <div class="main-menu">
            <div class="logo-container">
                <li><a href="/index.html"><img src="public/logo.png" class="logo" alt="Plastic Change Logo"/></a></li>
            </div>
        
            <div class="icons">
              <ul>
                <li><a class="menuBTN" href="/rejsen.html"><BTN1 data="Mission mikroplastik"/></a></li>
                <li><a class="menuBTN" href="/stoet.html"><BTN2 data="Støt"/></a></li>
                <li class="burger-menu"><img src="public/burgermenu.svg" alt="Burger-Menu" /></li>
              </ul>
            </div>
          </div>
    </div>

    <div class="overlaymenu-container">
        <div class="icons-close">
          <ul class="ulicons">
                <li class="burger-menu2"><img src="public/burgermenu-luk.svg" alt="Burger-Menu2" /></li>
                <div class="storMenu">
                    <li><a href="/stoet.html">Støt nu</a></li>
                    <li><a href="/blivmedlem.html">Bliv medlem</a></li>
                    <li><a href="/om-os.html">Om os</a></li>
                    <li><a href="/rejsen.html">Rejse</a></li>
                </div>
                
          </ul>
          </div>
    </div>

</header>


<style>
    header{
    display: flex;
    justify-content: space-between;
    list-style-type: none;
    z-index: 1000;
    /* position: absolute; */
    }

    .main-menu {
    display: flex;
    justify-content: space-between;
    list-style: none;
    }

    .menu-container {
        position: absolute;
        z-index: 10000;
    }

  .icons ul {
    display: flex;
    align-items: right;
    list-style-type: none; 
    gap: 1rem;
    padding: 1rem;
  }

  .icons {
    display: flex;
  }

    .logo {
    width: 280px;
    height: 100%;
    }

    .burger-menu img, .burger-menu2 img {
      width: 40px;
    }

  .burger-menu,
  .burger-menu2 {
    cursor: pointer;
    padding: 15px 25px;
    transition: 0.5s ease;
  }

  .burger-menu:hover, .burger-menu2:hover {
    opacity: 0.7;
  transition: 0.5s ease;
    }

  body .open {
    transform: translateX(0);
  }

  .overlaymenu-container {
    height: 100vh;
    width: 100vw;
    background-color: var(--primary-red);
    position: fixed;
    top: 0;
    right: 0;
    overflow: hidden;
    transform: translateX(100%);
    transition: transform 0.2s;
    z-index: 99;
  }

  .burger-menu2 {
    display: flex;
    justify-content: right;
    text-align: right;
  }

  .storMenu {
    display: flex;
    justify-content: left;
    padding-left: 30rem;
    flex-direction: column;
  }

  .icons-close ul {
    display: flex;
    flex-direction: column;
    list-style-type: none;
    z-index: 1000;
    padding-right: 2rem;
    padding-top: 4rem;
  }

  .icons-close a {
    padding-top: 2rem;
    padding-right: 2rem;
    display: block;
    z-index: 1000;
    color: var(--white);
    font-family: Campton;
    font-weight: 700;
    font-size: 70px;
    text-decoration-color: var(--dark-blue);
  }


    @media screen and (min-width: 800px) {
        section {
        height: 100vh;
    }

    h1 {  
        margin-top: 10%;
    }

    header {
    z-index: 1000;
    display: block;
    }

    }

</style>

<script>
    const overlaymenu = document.querySelector(".overlaymenu-container");
    const burgermenu = document.querySelector(".burger-menu");
    const close = document.querySelector(".burger-menu2");
    const close2 = document.querySelector("section");
  
    burgermenu.addEventListener("click", function () {
      overlaymenu.classList.add("open");
    });
  
    close.addEventListener("click", function () {
      overlaymenu.classList.remove("open");
    });

    close2.addEventListener("click", function () {
      overlaymenu.classList.remove("open");
    });

    overlaymenu.addEventListener("click", function () {
      overlaymenu.classList.remove("open");
    });

  </script>
  