---
const { bg } = Astro.props;
---

<section class=`SoMe primaryBoxSection ${bg}`>
    <a class="SoMeIcon" href="https://www.facebook.com/plasticchange"><img src="/icons/fb-icon.svg" class="icon" alt=""></a>
    <a class="SoMeIcon" href="https://www.instagram.com/plasticchange/"><img src="/icons/insta-icon.svg" class="icon" alt=""></a>
    <a class="SoMeIcon" href="https://plasticchange.dk/"><img src="/icons/tiktok-icon.svg" class="icon" alt=""></a>
    <a class="SoMeIcon" href="https://www.youtube.com/@plasticchange5159"><img src="/icons/yt-icon.svg" class="icon" alt=""></a>
</section>

<style>

section {
    display: none;
}

@media screen and (min-width: 800px) {

    section {
        display: block;
    }
    .SoMe {
    width: 50px;
    height: 140px;
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 60%;
    right: 0;
    justify-content: center;
    align-items: center;
    gap: 8px;
    z-index: 900;
    cursor: pointer;
}

.blue {
    background-color: var(--dark-blue);
    z-index: 9999999;
}

img {
    cursor: pointer;
}

.SoMe:hover {
    background-color: var(--dark-blue);
}
}

</style>