---
import BTN1 from "../general/BTN1.astro";
---
<section class="popUp">
    <section class="formBox">
        <div class="stoetHeading">
            <h2>Støt os i kampen</h2>
            <p>Du kan støtte månedligt eller med engangbetaling. Alt støtte går til kampen for et plastikfrit samfund.</p>
        </div>

        <div class="antalGange">
            <input type="radio" id="enGang" name="stoetType" class="stoetBTN1 tertiaryBTN stoetRadio" checked>
            <label for="enGang" class="stoetBTN1 tertiaryBTN"></label>
            <p>Én gang</p>
        
            <input type="radio" id="manedligt" name="stoetType" class="stoetBTN1 tertiaryBTN stoetRadio">
            <label for="manedligt" class="stoetBTN1 tertiaryBTN"></label>
            <p>Månedligt</p>
        </div>
        

        <div class="stoetBeloeb">
            <input type="radio" id="stoet50" name="stoetBeloeb" class="stoetBTN2 tertiaryBTN stoetRadio" checked>
            <label for="stoet50" class="stoetBTN2 tertiaryBTN">50</label>
        
            <input type="radio" id="stoet100" name="stoetBeloeb" class="stoetBTN2 tertiaryBTN stoetRadio">
            <label for="stoet100" class="stoetBTN2 tertiaryBTN">100</label>
        
            <input type="radio" id="stoet150" name="stoetBeloeb" class="stoetBTN2 tertiaryBTN stoetRadio">
            <label for="stoet150" class="stoetBTN2 tertiaryBTN">150</label>
        </div>
        

        <div class="stoetCTA">
            <form class="andetBeloeb ">
                <input type="text" id="Andet beløb" value="Andet beløb ..."></label>
            </form>
            
            <div class="stoetCTA2">
                <BTN1 data="Støt nu"/>
                <p>Og fortsæt til betaling</p>
            </div>

        </div>
    </section>
</section>
<style>

label {
    font-family: Campton;
}

.popUp {

    align-items: center;
}
.formBox {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        padding: 1.5rem;
        width: 460px;
        height: 670px;
}
@keyframes slideUp {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-30px); 
  }
  100% {
    transform: translateY(0);
  }
}
.formBox {
  animation: slideUp 0.5s ease-in-out; 
}

.formBox.hidden {
  display: none;
}

    .stoetHeading {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 2rem;
        margin-left: 2rem;
        margin-right: 2rem;
    }

    .stoetHeading h2 {
        font-size: 40px;
        margin-top: 1rem;
    }

    .antalGange {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-left: 2rem;
        margin-right: 2rem;
    }

    .stoetBeloeb {
        display: flex;
        /* justify-content: space-evenly; */
        text-align: center; 
        gap: 2rem;
        margin-left: 2rem;
        margin-right: 2rem;
    }
    .stoetCTA {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        gap: 5rem;
    }

    .stoetCTA2 {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        gap: 1rem;
    }

    .stoetCTA2 p {
        font-size: 10px;
        font-style: italic;
        font-weight: 400;
    }

    .stoetBTN1 {
        border-radius: 50%;
        height: 40px;
        width: 40px;
        cursor: pointer;
        border: none;
        outline: none;
        background-color: transparent;
        border-style: solid;
        color: var(--light-grey);
    }

    .stoetRadio {
        display: none; /* Hide the actual radio buttons */
        }
    
    .stoetRadio + label {
        color: var(--light-grey);
        background-color: var(--dark-blue);
    }

    .stoetRadio:hover + label {
        color: var(--white);
        background-color: var(--dark-blue);
    }

    .stoetRadio:checked + label {
        color: var(--dark-blue);
        background-color: var(--white);
    }

    .stoetBTN2 {
        border-radius: 50%;
        height: 70px;
        width: 70px;
        cursor: pointer;
        border: none;
        outline: none;
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        background-color: transparent;
        color: var(--light-grey);
        border-style: solid;
        line-height: 65px;
}

    .andetBeloeb input {
        border-color: 2px solid var(--light-grey);
        border-style: solid;
        background-color: transparent;
        color: var(--light-grey);
        width: 340px; 
        height: 52px; 
        padding: 15px;
        border-radius: 8px;
    }

    .andetBeloeb input:hover {
        color: var(--white);
        }

    .andetBeloeb input:focus {
    border-color: var(--primary-red);
    outline: none; 
    }

    @media screen and (min-width: 800px) {
        .formBox {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        padding: 2rem;
        width: 555px;
        height: 750px;
        }

        .stoetBTN1 {
            height: 38px;
            width: 38px;
        }
        .stoetBTN2 {
            height: 80px;
            width: 80px;
            font-size: 25px;
            line-height: 80px;
        }

        .antalGange {
        gap: 2rem;
        }

        .stoetBeloeb {
        gap: 3rem;
        }

        .andetBeloeb input {
            width: 420px;
            height: 40px;
            padding: 30px;
            font-size: larger;
        }

        .stoetCTA {
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            gap: 4rem;
        }
    }

</style>