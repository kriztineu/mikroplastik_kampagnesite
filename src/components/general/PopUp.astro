---
import StoetFormPopUp from "./StoetFormPopUp.astro";
---
<div class="modal" id="modal">
    <div class="modal-inner">
      <button class="close" id="closeModal">
        <img src="/burgermenu-luk.svg" alt="Close">
    </button>
        <div class="stoetForm">
          <StoetFormPopUp/>
        </div>
    </div>
</div>
  
  <style>

    .modal {
      position: fixed;
      top: 0;
      left: left;
      right: 0;
      bottom: 0;
      display: none;
      z-index: 99999;
    }
    
    .modal-inner {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .stoetForm {
    }

  
    .modal.open {
      display: flex;
    }

    .close {
      position: fixed;
    top: 3%;
    right: 2%;
    z-index: 2000;
    width: 40px;
    height: 40px;
    margin-bottom: -3rem;
    margin-left: 24.5rem;
    background-color: transparent;
    border: none;
    outline: none;
    }
    body.modal-open::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #01142a81; /* Set the desired background color with transparency */
    z-index: 9998; /* Make sure it's above other elements */
  }

  body.modal-open {
    overflow: hidden; /* Optional: Prevent scrolling when the modal is open */
  }

    @media screen and (min-width: 800px) {
      .close {
        display: absolute;
        margin-bottom: -5rem;
        margin-left: 30rem;
      }

      .modal {
      position: fixed;
      top: 0;
      }
    }

  </style>
  
