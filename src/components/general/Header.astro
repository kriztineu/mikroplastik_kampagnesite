      <div class="logo-container">
        <button><a href="/index.html"></a><img src="public/logo.png" class="logo" alt="Plastic Change Logo"/></a></button>
      </div>
  
      <div class="main-menu">
        <div class="icons">
          <ul>
            <a href="/blivmedlem.html"><BTN1 data="Bliv medlem"/></a>
            <a href="/stoet.html"><BTN2 data="Støt"/></a>
            <li class="burger-menu"><img src="public/burgermenu.svg" alt="Burgermenu" /></li>
          </ul>
        </div>
      </div>
    </div>
  
    <div class="overlaymenu-container">
      <div class="icons-close">
        <ul class="ulicons">
          <!-- <li class="burger-menu2"><img src="public/burgermenu.svg" alt="Burger-Menu2" /></li> -->
        </ul>
      </div>

  
      <ul class="sub-menu end">
        <li><a href="/rejsen.html">Mikroplastik</a></li>
