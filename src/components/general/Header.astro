<style>

    header {
        background-color: grey;
    }

.logo {
    width: 150px;
    height: 100%;
}

.menu-container {
      display: flex;
      justify-content: space-between;
      flex-direction: row;
    }

    button {
        border: none;
        cursor: pointer;
        text-decoration: none;
        outline: none;
        background: none;
    }




 @media screen and (min-width: 800px) {


    button {
        border: none;
        cursor: pointer;
        text-decoration: none;
        outline: none;
        background: none;
    }

    .leftSideHeader {
        display: flex;
        gap: 1rem
    }
.logo {
    width: 280px;
    height: 100%;
}

.burgermenuSvg{
    width: 50px;
    height: 100%;
 }

 .burger-menu,
    .burger-menu2 {
      cursor: pointer;
      padding: 15px;
      /* width: 100%; */
      height: 100%; 
    }

    body .open {
      transform: translateX(0);
    }
  
    .logo {
        width: 250px;
    }

    .burger-menu img{
        width: 40px;
    }

    body .open {
      transform: translateX(0);
    }

    .menu-container {
      display: flex;
      justify-content: space-between;
      flex-direction: row;
    }

    .main-menu {
      list-style: none;
      display: flex;
      justify-content: space-between;
      padding-top: 1.2rem;
      padding-bottom: 1.2rem;
      
    }

    .main-menu a {
      display: block;
      
    }

    .main-menu i {
      padding-top: 1.5rem;
      display: block;
    }
  
    .icons ul {
      list-style-type: none;
      display: flex;
      flex-direction: row;
      gap: 1rem;
    }

    .overlaymenu-container {
      height: 100vh;
      width: 100vw;
      background-color: transparent;
      background-color: #edeae8;
      position: fixed;
      top: 0;
      right: 0;
      overflow: hidden;
      transform: translateX(100%);
      transition: transform 0.2s;
      z-index: 99;
      display: flex;
      flex-direction: column;
    }

    .overlaymenu-container a {
      display: block;
      display: flex;
      justify-content: flex-start;
      align-items: left;
    }
  
    .overlaymenu-container .sub-menu {
      display: block;
      display:flex;
      flex-direction: column;
    }

    .icons-close {
      display: flex;
      justify-content: flex-end;
      padding: 10px;
    }
  
    .icons-close ul {
      display: flex;
      justify-content: flex-end;
      list-style-type: none;
      align-items: flex-end;
      gap: 1rem;
    }

    .icons-close a {
      padding-top: 1.5rem;
      display: block;
    }
  
    .icons-close i {
      padding-top: 1.5rem;
      display: block;
    }

    .sub-menu {
      padding-top: 10rem;
      display: flex;
      align-items: left;
      justify-content: left;
      flex-direction: column;
      justify-content:end;
      align-items: left;
      gap: 0.5rem;
      list-style-type: none;
      
    }
  
    .sub-menu a {
      align-items: left;
      justify-content: left;
      flex-direction: column;
      justify-content:end;
      align-items: left;
      border-bottom: 1px solid;
      font-size: 10vw;
      z-index: 100;
      font-weight: 500;
      padding-left: 2rem;

    }

}

    

</style>